@model Modelo.Sucursal
@{
    ViewBag.Title = "Datos Negocio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" mt-3">
    <h2 class="card-header bg-info text-white mb-4">Datos de la Empresa</h2>
    <div class="row">
    
        <div class="col-md-5">
            
            <!-- Datos de la Empresa -->
            <form>
                <input class="form-control form-control-sm model" id="txtid" name="CodigoEmpresa" type="hidden">

                <div class="form-group row">
                    <label for="txtNombre" class="col-sm-2 col-form-label">Nombre: <span class="error"></span></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control model" id="txtNombre" name="Nombre">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtDireccion" class="col-sm-2 col-form-label" >Dirección: <span class="error"></span></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control  model" id="txtDireccion" name="Direccion">
                    </div>

                </div>
                <div class="form-group row">
                    <label for="txtMunicipio" class="col-sm-2 col-form-label">Municipio: <span class="error"></span></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control  model" id="txtMunicipio" name="Municipio">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtDepartamento" class="col-sm-3 col-form-label ">Departamento: <span class="error"></span></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control  model" id="txtDepartamento" name="Departamento">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtTelefono" class="col-sm-2 col-form-label ">Teléfono: <span class="error"></span></label>
                    <div class="col-sm-10">
                        <input class="form-control  model" id="txtTelefono" name="Telefono" type="number"
                               size="12"
                               minlength="8"
                               maxlength="11" >
                    </div>
                </div>

                <button type="button" class="btn btn-success" id="btnEditar" onclick="editarCampos()" disabled>Editar</button>
                <button type="button" class="btn  btn-primary" id="btnGuardar" style="display:none;" onclick="guardarCambios()">Guardar</button>
                <button type="button" class="btn  btn-secondary" id="btnCancelar" style="display:none;" onclick="cancelarEdicion()">Cancelar</button>
            </form>
        </div>
        <div class="col-md-7">
            <div class="mb-3 text-center">
                <div class="content-wrapper" style="padding:10px">
                    <div class="col-sm-12">
                        <div class="card border-info">
                            <div class="card-header bg-info text-white">
                                Tipos de Consumos
                            </div>
                            <div class="card-body">
                                <hr />
                                <div class="row mt-3">
                                    <div class="col-sm-12 NoDesbordar">
                                        <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Código</th>
                                                    <th>Nombre </th>
                                                    <th>Estado</th>
                                                    <th>Acciónes</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header btn-info text-white">
                <h5 class="modal-title" id="exampleModalLabel">Tipo Consumo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input type="hidden" class="form-control form-control-sm model" id="txtId" >
                    <div class="form-group row">
                        <label for="txtNombreTC" class="col-sm-2 col-form-label col-form-label-sm">Tipo: <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm model" id="txtNombreTC" name="NombreMesa" autocomplete="off" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="cboEstado" class="col-sm-2 col-form-label col-form-label-sm">Estado:</label>
                        <div class="col-sm-10">
                            <select class="form-control form-control-sm model" id="cboEstado" name="Estado">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Sucursal.js"></script>
}
