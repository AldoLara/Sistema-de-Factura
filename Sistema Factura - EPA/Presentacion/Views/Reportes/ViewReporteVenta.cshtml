@{
    ViewBag.Title = "Reporte Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section estilos {
    <style>
        #inner-right {
            max-height: 300px;
            overflow-y: scroll;
        }

        .tabs {
            overflow: hidden;
            background-color: #f1f1f1;
        }

        .tablink {
            /* background-color: #f1f1f1; */
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            font-size: 17px;
            
        }
            .tablink:hover {
                background-color: #ddd;
            }

        .tabcontent {
            display: none;
            margin-top: 20px;
            width: 100%;
        }

       
        .show {
            display: block;
        }

      
    </style>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Reportes</a></li>
        <li class="breadcrumb-item" aria-current="page">Ventas</li>
    </ol>
</nav>



<div class="tabs">
    <label class="tablink active" onclick="openTab('Ventas')">Ventas</label>
    <label class="tablink" onclick="openTab('Productos')">Productos</label>
    @* <label class="tablink" onclick="openTab('Ingredientes')">Ingredientes</label> *@
</div>

<div id="Ventas" class="tabcontent">
    <div class="row">
        <div class="col-sm-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    Reporte de ventas
                </div>
                <div class="card-body">
                    <div class="row align-items-end">
                        <div class="col-sm-2">
                            <div class="mb-2 ml-2">
                                <input type="radio" id="opcion1" name="grupo1" value="opcion1">
                                <label for="opcion1" style="font-size:14px;">Rango Fechas</label><br>
                            </div>
                            <div class="ml-2">
                                <input type="radio" id="opcion2" name="grupo1" value="opcion2" style="font-size:15px;">
                                <label for="opcion2" style="font-size:14px;">Cierre</label><br>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group mb-0">
                                <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Inicio:</label>
                                <input type="date" class="form-control form-control-sm model" id="txtFechaInicio" name="FechaInicio" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group mb-0">
                                <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Fin:</label>
                                <input type="date" class="form-control form-control-sm model" id="txtFechaFin" name="FechaFin" autocomplete="off">
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group mb-0">
                                <button id="btnBuscar" type="button" class="btn btn-sm btn-primary btn-block"><i class="fas fa-search"></i> Buscar</button>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-2">
                        <div class="col-sm-12">
                            <button class="btn btn-info float-left" onclick="printData()">
                                <i class="fas fa-print"></i> Imprimir
                            </button>
                        </div>
                    </div>
                    <div class="row" id="inner-right">
                        <div class="col-sm-12">
                            <table id="tbReporte" class="table table-striped table-bordered table-sm table-responsive-sm" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Fecha Venta</th>
                                        <th>Codigo</th>
                                        <th>Empleado</th>
                                        <th>Cantidad Vendidas</th>
                                        <th>Cantidad Productos</th>
                                        <th>Total Venta</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="Productos" class="tabcontent">
    <div class="row">
        <div class="col-sm-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    Reporte de productos vendidos
                </div>
                <div class="card-body">
                    <div class="row align-items-end">
                        <div class="col-sm-2">
                            <div class="mb-2 ml-2">
                                <input type="radio" id="opcion1s" name="grupo1s" value="opcion1">
                                <label for="opcion1s" style="font-size:14px;">Rango Fechas</label><br>
                            </div>
                            <div class="ml-2">
                                <input type="radio" id="opcion2s" name="grupo1s" value="opcion2" style="font-size:15px;">
                                <label for="opcion2s" style="font-size:14px;">Cierre</label><br>
                           </div>
                        </div>
                      

                        <div class="col-sm-2">
                            <div class="form-group mb-0">
                                <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Inicio:</label>
                                <input type="date" class="form-control form-control-sm model" id="txtFechaInicios" name="FechaInicio" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group mb-0">
                                <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha Fin:</label>
                                <input type="date" class="form-control form-control-sm model" id="txtFechaFins" name="FechaFin" autocomplete="off">
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group mb-0">
                                <button id="btnBuscarProducto" type="button" class="btn btn-sm btn-primary btn-block"><i class="fas fa-search"></i> Buscar</button>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-2">
                        <div class="col-sm-12">
                            <button class="btn btn-info float-left" onclick="printData()">
                                <i class="fas fa-print"></i> Imprimir
                            </button>
                        </div>
                    </div>
                    <div class="row" id="inner-right">
                        <div class="col-sm-12">
                            <table id="tbReporteProducto" class="table table-striped table-bordered table-sm table-responsive-sm" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Cantidad Vendida</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="Ingredientes" class="tabcontent">
    <div class="row">
        <div class="col-sm-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    Reporte de Ingredientes
                </div>
                <div class="card-body">
                    <div class="row align-items-end">
                      
                        <div class="col-sm-2">
                            <div class="form-group mb-0">
                                <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha de Cierre:</label>
                                <input type="date" class="form-control form-control-sm model" id="txtFechaCierre" name="FechaInicio" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group mb-0">
                                <button id="btnBuscarIngrediente" type="button" class="btn btn-sm btn-primary btn-block"><i class="fas fa-search"></i> Buscar</button>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-2">
                        <div class="col-sm-12">
                            <button class="btn btn-info float-left" onclick="printData()">
                                <i class="fas fa-print"></i> Imprimir
                            </button>
                        </div>
                    </div>
                    <div class="row" id="inner-right">
                        <div class="col-sm-12">
                            <table id="tbReporteIngrediente" class="table table-striped table-bordered table-sm table-responsive-sm" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Ingrediente</th>
                                        <th>Cantidad Usada</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/ReporteVentas.js"></script>
}
