@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="cabe">
    <div class="d-flex align-items-center" style="height: 7vh;">
        <div class="me-3 " id="v-pills-tab" role="tablist" aria-orientation="horizontal">
            <a class="custom-margin-right @(Context.Request.RouteValues["action"].ToString() == "ViewUsuarios" && Context.Request.RouteValues["controller"].ToString() == "Usuario" ? "active" : "")" asp-area="" asp-controller="Usuario" asp-action="ViewUsuarios">Usuarios</a>  |
            <a class="custom-margin-right @(Context.Request.RouteValues["action"].ToString() == "ViewPermisos" && Context.Request.RouteValues["controller"].ToString() == "Permiso" ? "active" : "")" asp-controller="Permiso" asp-action="ViewPermisos">Permisos</a>|
            <a class="custom-margin-right @(Context.Request.RouteValues["action"].ToString() == "ViewRoles" && Context.Request.RouteValues["controller"].ToString() == "Role" ? "active" : "")" asp-controller="Role" asp-action="ViewRoles">Roles</a>  
        </div>
    </div>
</div>


<div class="col-sm">
    <div class="card bg-info text-white border-info">
        <div class="card-body p-2">

            <div class="row">
                <div class="col-sm-10">
                    <h6 class="card-title mb-1">Mis Datos</h6>
                </div>
                <div class="col-sm-2">
                    <div class="float-right">
                        <a class="btn btn-light btn-sm" data-toggle="collapse" href="#collapse2" role="button" aria-expanded="false" aria-controls="collapseExample">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>

            </div>

            <div class="row collapse" id="collapse2">
                <input id="txtIdUsuario" type="hidden" value="0" />
                <div class="col-sm-3">
                    <div class="form-group mb-0">
                        <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Nombre:</label>
                        <label class="form-control form-control-sm model mb-1" readonly id="lblempleadonombre"></label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group mb-0">
                        <label for="txtRazonSocialProveedor" class="col-form-label col-form-label-sm">Apellido:</label>
                        <label class="form-control form-control-sm model mb-1" readonly id="lblempleadoapellido"></label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group mb-0">
                        <label for="txtRazonSocialProveedor" class="col-form-label col-form-label-sm">Correo:</label>
                        <label class="form-control form-control-sm model mb-1" readonly id="lblempleadocorreo"></label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group mb-0">
                        <label for="txtRazonSocialProveedor" class="col-form-label col-form-label-sm">Rol:</label>
                        <label class="form-control form-control-sm model mb-1" readonly id="lblempleadorol"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content-wrapper" style="padding:10px">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Usuarios
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"><i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo</button>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata"  class="table table-striped table-bordered nowrap compact" style="width:100%" >
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Id</th>
                                    <th>Clave</th>
                                    <th>Correo</th>
                                    <th>Rol</th>
                                    <th>Nombres</th>
                                    <th>Apellidos</th>
                                    <th>Estado</th>
                                    <th>Acciónes</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header btn-info text-white">
                <h5 class="modal-title" id="exampleModalLabel">Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input id="txtid" class="model" value="0" type="hidden" />
                    <div class="form-group row">
                        <label for="txtNombres" class="col-sm-2 col-form-label col-form-label-sm">Nombres:<span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm model" id="txtNombres" name="Nombres">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtApellidos" class="col-sm-2 col-form-label col-form-label-sm">Apellidos: <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm model" id="txtApellidos" name="Apellidos">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtCorreo" class="col-sm-2 col-form-label col-form-label-sm">Correo: <span class="error"></span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-sm model" id="txtCorreo" name="Correo">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtClave" class="col-sm-3 col-form-label col-form-label-sm">Contraseña: <span class="error"></span></label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control form-control-sm model" id="txtClave" name="Clave">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label col-form-label-sm">Rol:</label>
                        <div class="col-sm-10">
                            <select class="form-control form-control-sm model" id="cboRol" name="Rol"></select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label col-form-label-sm">Estado:</label>
                        <div class="col-sm-10">
                            <select class="form-control form-control-sm model" id="cboEstado" name="Activo">
                                <option value="1">Activo</option>
                                <option value="0">No Activo</option>
                            </select>
                        </div>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Usuarios.js"></script>
}

