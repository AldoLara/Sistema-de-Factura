@{
    ViewBag.Title = "Crear Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Ventas</a></li>
        <li class="breadcrumb-item active" aria-current="page">Registrar Venta</li>
    </ol>
</nav>

@section estilos {
    <style>
        #inner-right {
            max-height: 300px;
            overflow-y: scroll;
        }

        .tabs {
            overflow: hidden;
            background-color: #f1f1f1;
        }

        .tablink {
            /* background-color: #f1f1f1; */
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            font-size: 17px;
        }

            .tablink:hover {
                background-color: #ddd;
            }

        .tabcontent {
            display: none;
            margin-top: 20px;
            width: 100%;
            transition: opacity 0.9s ease;
          
        }


        .show {
            display: block;
        }


      
    </style>
}


<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header p-2 bg-info text-white">
                
                <button id="btnTerminarGuardarVenta" class="btn btn-warning btn-sm float-right ml-2">
                    <!-- Agrega un margen a la derecha -->
                    <i class="fa fa-print" aria-hidden="true"></i> Imprimir y Registrar
                </button>

                <button id="btnCierreVenta" class="btn btn-primary btn-sm float-right mr-3">
                    <!-- Agrega un margen a la izquierda -->
                    <i class="fa fa-x" aria-hidden="true"></i> Cierre de Ventas
                </button>
            </div>

            <div class="card-body p-2 card-venta">
                <div class="row">
                    
